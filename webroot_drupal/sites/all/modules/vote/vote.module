			),
			'file' => 'vote.show.inc',
	);
	
	$items['vote/organism/%'] = array(
			'title' => 'Who knows it?',
			'description' => 'Voting page for experts',
			'page callback' => 'vote_show_organism',
			'page arguments' => array(
					2
			),
			'access arguments' => array(
					VOTE_ACCESS
			),
			'file' => 'vote.show.inc',
