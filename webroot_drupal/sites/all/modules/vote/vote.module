/**
 * Define permissions which can be given to different roles.
 *
 * @note Those permissions are not related to the acl
 */
function vote_permission() {
	return array(
			VOTE_WRITE => array(
					'title' => t('Vote for an organism.'),
			),
			VOTE_ACCESS => array(
					'title' => t('View vote page.'),
			)
	);
}