/**********************************
 *  Hook implementations
 *********************************/

/**
 * Implements hook_help()
 *
 * @param $path
 * @param $arg
 * @return string
 */
function inventory_help($path, $arg) {
	switch ($path) {
		case "admin/help#inventory":
			return '<p>'.  t("Inventory module") .'</p>';
			break;
	}
}

/**
 * Implements hook_theme()
 *
 * @return an array with theme template information
 */
function inventory_theme() {
	return array(
    	'inventory_overview' => array(
 			'template' => 'inventory_overview',
    	  	'variables' => array(
    	  		'items' => array(), // items for building the table
				'introduction' => '' // introduction text
	)
	)
	);
}

/**
 * Implements hook_menu()
 *
 * @return array
 */
function inventory_menu() {
	$items['inventory/new/%'] = array(
    'title' => 'New inventory',
    'description' => 'Create a new inventory',
    'page callback' => 'inventory_new',
    'page arguments' => array(1),
    'access arguments' => array('access content'),
    'type' => MENU_NORMAL_ITEM,
	'file' => 'inventory.new.inc',
	);
	$items['inventory/edit/%'] = array(
    'title' => 'Edit inventory',
    'description' => 'Edit inventory',
    'page callback' => 'inventory_edit',
    'page arguments' => array(1),
    'access arguments' => array('access content'),
    'type' => MENU_NORMAL_ITEM,
	'file' => 'inventory.new.inc',
	);
	$items['inventory/%'] = array(
    'title' => 'Inventory Url',
    'description' => 'Swissmon Inventory',
    'page callback' => 'inventory_show',
	'page arguments' => array(1),
    'access arguments' => array('access content'),
    'type' => MENU_CALLBACK,
	'file' => 'inventory.pages.inc',
	);
	$items['inventory'] = array(
    'title' => 'Inventory overview',
    'description' => 'Shows an overview of all inventories',
    'page callback' => 'inventory_overview',
    'access arguments' => array('access content'),
    'type' => MENU_NORMAL_ITEM,
	'file' => 'inventory.overview.inc',
	);
  
  	return $items;
}
