<?xml version="1.0"?>
<project name="build Modules" default="build" basedir=".">

	<property name="src" value="../application" />
	<property name="build" value="buildModules" />

	<!-- Clean the target directory -->
	<target name="init">
		<delete dir="${build}" />
		<mkdir dir="${build}" />
	</target>

	<!-- Copy all files into the build directory -->
	<target name="build" depends="init">

		<!-- Copy files -->
		<copy todir="${build}">
			<fileset dir="${src}/modules">
				<include name="area/**"/>
				<include name="inventory/**"/>
				<include name="organism/**"/>
				<include name="sgroup/**"/>
				<exclude name="**/.svn" />
			</fileset>
		</copy>
	</target>
</project>